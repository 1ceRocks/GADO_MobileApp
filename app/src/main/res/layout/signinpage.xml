<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signinbg">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/questionButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="65dp"
            android:layout_marginStart="320dp"
            android:layout_marginBottom="28dp"
            android:clickable="true"
            app:srcCompat="@drawable/baseline_photo_question_24"
            android:contentDescription="TODO"
            android:focusable="true" />

        <EditText
            android:id="@+id/emailText2"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/emailbg"
            android:hint="E-mail Address"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:paddingEnd="25dp"
            android:paddingStart="25dp"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/passwordText2"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="310dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/emailbg"
            android:hint="Password"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/SignInCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_below="@id/passwordText2"
            android:text="Remember Me?"
            tools:ignore="HardcodedText"></CheckBox>

        <CheckBox
            android:id="@+id/PrivacyCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:layout_above="@id/startBtn"
            android:text="I agree to Privacy Policy"
            tools:ignore="HardcodedText"></CheckBox>




        <Button
            android:id="@+id/startBtn"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_above="@+id/donthaveaccount"
            android:backgroundTint="#56AB2F"
            android:text="Log in"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/forgotBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:layout_below="@id/SignInCheckBox"
            android:text="Forgot your password?"
            android:textAlignment="center"
            android:backgroundTint="#1AFFFFFF"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/donthaveaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textStyle="normal"
            android:layout_marginStart="90dp"
            android:layout_alignParentBottom="true"
            android:textSize="17dp"
            android:textColor="@color/black">
        </TextView>

        <TextView
            android:id="@+id/logintextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="268dp"
            android:layout_alignParentBottom="true"
            android:text="Sign Up"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#1C3423"
            android:textSize="17dp"
            />




    </RelativeLayout>














</RelativeLayout>