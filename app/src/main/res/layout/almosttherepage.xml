<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/almosttherepage"
    tools:context=".Almostthere_page">



    <RelativeLayout
        android:id="@+id/relay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/dailybudgettext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="170dp"
            android:text="Enter your Daily Budget:"
            android:textColor="@color/white"
            android:visibility="invisible"
            android:textSize="20dp">


        </TextView>


        <EditText
            android:id="@+id/amountEditText01"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/dailybudgettext"
            android:layout_centerInParent="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="75dp"
            android:background="@drawable/edit_round"
            android:inputType="numberDecimal"
            android:paddingStart="100dp"
            android:paddingEnd="20dp"
            android:text=""
            android:textSize="25dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@+id/dailybudgettext"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/php"
            />

        <ImageView
            android:id="@+id/proceedbtn"
            android:layout_width="175dp"
            android:layout_height="125dp"
            android:layout_below="@id/amountEditText01"
            android:layout_centerInParent="true"
            android:layout_marginStart="150dp"
            android:layout_marginTop="75dp"
            android:paddingBottom="38dp"
            android:src="@drawable/proceedbtn"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="45dp" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="28dp"
            app:srcCompat="@drawable/backbutton"
            android:focusable="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/contactus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="99dp"
        android:layout_marginTop="654dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="57dp"
        android:text="Need help or concern? Contact us."
        android:textColor="@color/black"
        android:textSize="13dp" />


</RelativeLayout>