<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcomeuser1"
    tools:context=".WelcomeuserPage">



    <LinearLayout
        android:id="@+id/relay2"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp">
        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="Welcome"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="65dp"/>

        <LinearLayout
            android:id="@+id/hello"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-35dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/User"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="User"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:textSize="65dp"/>
            <TextView
                android:id="@+id/exclamation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="!"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:textSize="65dp"/>
        </LinearLayout>





        <TextView
            android:id="@+id/howmuchtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="-10dp"
            android:layout_below="@+id/User"
            android:text="How much money can you"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/spendtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"

            android:layout_marginStart="50dp"
            android:layout_below="@+id/howmuchtext"
            android:text="spend for today?"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/dailybudgettext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="65dp"
            android:layout_below="@id/spendtext"
            android:text="Enter your Daily Budget:"
            android:textColor="@color/white"
            android:textSize="20dp">

        </TextView>


        <EditText
            android:id="@+id/amountEditText1"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_below="@+id/dailybudgettext"
            android:layout_centerInParent="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="75dp"
            android:background="@drawable/edit_round"
            android:inputType="numberDecimal"
            android:paddingStart="100dp"
            android:paddingEnd="20dp"
            android:text=""
            android:textSize="25dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@+id/dailybudgettext"
            android:layout_marginStart="80dp"
            android:layout_marginTop="-60dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/php" />

        <ImageView
            android:id="@+id/walletBtn"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_below="@id/amountEditText1"
            android:layout_centerInParent="true"
            android:layout_marginStart="145dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="100dp"
            android:paddingBottom="38dp"
            android:src="@drawable/wallet"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="45dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/contactus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/settings"
        android:text="Need help or concern? Contact us."
        android:textColor="@color/black"
        android:textSize="15dp" />


    <ImageView
        android:id="@+id/settings"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"
        android:src="@drawable/settingsbutton"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:textSize="45dp"
        android:background="@android:color/transparent"
        android:textStyle="bold">

    </ImageView>












</RelativeLayout>