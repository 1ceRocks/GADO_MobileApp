<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcomeuser"
    tools:context=".WelcomeuserPage">

    <RelativeLayout
        android:id="@+id/relay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/dailybudgettext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="170dp"
            android:text="Enter your Daily Budget:"
            android:textColor="@color/white"
            android:textSize="25dp">

        </TextView>


        <EditText
            android:id="@+id/amountEditText1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/dailybudgettext"
            android:layout_centerInParent="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="75dp"
            android:background="@drawable/edit_round"
            android:inputType="numberDecimal"
            android:paddingStart="100dp"
            android:paddingEnd="20dp"
            android:text=""
            android:textSize="25dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@+id/dailybudgettext"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/php"
           />

        <ImageView
            android:id="@+id/walletBtn"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_below="@id/amountEditText1"
            android:layout_centerInParent="true"
            android:layout_marginStart="150dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="100dp"
            android:paddingBottom="38dp"
            android:src="@drawable/wallet"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="45dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



        </RelativeLayout>


    </RelativeLayout>





</RelativeLayout>